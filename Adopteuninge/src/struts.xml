<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<package name="basicstruts2" extends="struts-default">
		<action name="index">
			<result>/index.jsp</result>
		</action>

        <action name="saisieTerme" class="wikistruts.action.SaisieTerme" method="execute">
            <result name="success">/success.jsp</result>
            <result name="input">/success.jsp</result>
        </action>

        <action name="ajoutTerme" class="wikistruts.action.AjoutTerme" method="execute">
            <result name="success">/ajout.jsp</result>
            <result name="input">/ajout.jsp</result>
        </action>
	</package>
</struts>
